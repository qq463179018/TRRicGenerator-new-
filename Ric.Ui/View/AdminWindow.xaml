                        <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                    </TabItem.Foreground>
                    <TabItem.Background>
                        <SolidColorBrush Color="{DynamicResource SecondBackground}"/>
                    </TabItem.Background>
                    <Grid Margin="0,0,0,0">
                        <Grid.Background>
                            <SolidColorBrush Color="{DynamicResource SecondBackground}"/>
                        </Grid.Background>
                        <ListBox x:Name="ListBox" HorizontalAlignment="Left" Margin="6,39,0,3" Width="156" 
        				ItemsSource="{Binding TaskList}"
        				SelectedIndex="{Binding TaskIndex}"
        				SelectedItem="{Binding SelectedTask}" 
        				BorderThickness="0,1,0,0">
                            <ListBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </ListBox.Foreground>
                            <ListBox.BorderBrush>
                                <SolidColorBrush Color="{DynamicResource Border}"/>
                            </ListBox.BorderBrush>
                            <ListBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </ListBox.Background>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Opacity" Value="0.9" />
                                    <Setter Property="Height" Value="25" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Opacity" Value="1.0" />
                                            <Setter Property="Background" Value="Gray" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <GridSplitter HorizontalAlignment="Left" Margin="162,-2,0,0" Width="3">
                            <GridSplitter.Background>
                                <SolidColorBrush Color="Black" Opacity="0.5"/>
                            </GridSplitter.Background>
                        </GridSplitter>
                        <TextBlock HorizontalAlignment="Left" Margin="180.86,9.448,0,0" TextWrapping="Wrap" Width="37.583" Height="15.96" VerticalAlignment="Top">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Name :"/></TextBlock>
                        <TextBox HorizontalAlignment="Left" Margin="181.631,26.408,0,0" TextWrapping="Wrap" Width="304.5" FontSize="18" Height="29.94" VerticalAlignment="Top" 
							 Text="{Binding Title}"
							 IsReadOnly="{Binding IsTaskReadOnly}"
							 BorderThickness="{Binding TaskBorderTextBox}" >
