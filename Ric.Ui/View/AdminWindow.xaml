                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBox.Foreground>
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                        <TextBlock Margin="183.86,62.757,0,0" TextWrapping="Wrap" Height="15.96" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66.14">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Description :"/></TextBlock>
                        <TextBox HorizontalAlignment="Left" Margin="180.631,83.717,0,0" TextWrapping="Wrap" FontSize="15" Width="304.5" Height="37.243" VerticalAlignment="Top"
					         Text="{Binding Description}"
							 IsReadOnly="{Binding IsTaskReadOnly}"
							 BorderThickness="{Binding TaskBorderTextBox}">
                            <TextBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBox.Foreground>
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
                        <TextBlock Margin="184.104,237.243,0,0" TextWrapping="Wrap" Text="Success rate :" HorizontalAlignment="Left" Width="70.51" Height="15.96" VerticalAlignment="Top">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" FontSize="20" Margin="183.86,258.203,0,0" TextWrapping="Wrap" Text="{Binding PercentSuccess}" Width="54" Height="23" VerticalAlignment="Top" >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Margin="240,265,0,0" TextWrapping="Wrap" Text="%" Width="9.82" Height="16.167" VerticalAlignment="Top" RenderTransformOrigin="1.988,0.006" Foreground="#FF222222"></TextBlock>
                        <TextBlock Margin="501.5,10,0,0" TextWrapping="Wrap" Height="16" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80.5">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Market :"/></TextBlock>
                        <ComboBox HorizontalAlignment="Left" Margin="500,26,0,0" VerticalAlignment="Top" Width="156" 
        				ItemsSource="{Binding MarketList}" 
        				SelectedItem="{Binding TaskMarket}" 
						IsEnabled="{Binding IsTaskEnable}" >
                            <ComboBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </ComboBox.Foreground>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image x:Name="FlagImage" Source="{Binding Abbreviation, Converter={StaticResource ImageConverter}}" Stretch="None" />
                                        <TextBlock Text="  " />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Margin="502.167,67,0,0" TextWrapping="Wrap" Height="16" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116.333">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Dev in charge :"/></TextBlock>
                        <ComboBox HorizontalAlignment="Right" Margin="0,84,18,0" VerticalAlignment="Top" Width="154"
						IsEnabled="{Binding IsTaskEnable}"
        				ItemsSource="{Binding DevList}" 
        				SelectedItem="{Binding Dev}" >
                            <ComboBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </ComboBox.Foreground>
                        </ComboBox>
                        <TextBlock HorizontalAlignment="Left" FontSize="16" Height="23" Margin="184.104,206.504,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="253"
								Text="Statistics">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <DataGrid Margin="184,317,28,10" 
								ItemsSource="{Binding SelectedTask.Runs}" 
								AutoGenerateColumns="False" IsEnabled="True" IsReadOnly="True" AlternatingRowBackground="Beige" 
								BorderThickness="0" VerticalScrollBarVisibility="Hidden" >
                            <DataGrid.Background>
                                <SolidColorBrush Color="Transparent" Opacity="0"/>
                            </DataGrid.Background>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding User}"/>
                                <DataGridTextColumn Width="2*" Header="Date" Binding="{Binding Date}"/>
                                <DataGridTextColumn Width="*" Header="Result" Binding="{Binding Result}"/>
                                <DataGridTextColumn Width="*" Header="Duration" Binding="{Binding Duration}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock HorizontalAlignment="Left" Margin="181.631,128.05,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="55.997">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <ComboBox HorizontalAlignment="Left" Margin="180.631,147.283,0,0" VerticalAlignment="Top" Width="144.5"
							  IsEnabled="{Binding IsTaskEnable}"
                              ItemsSource="{Binding TaskStatusValues}" 
        				      SelectedItem="{Binding Taskstatus}"
                              />
                        <TextBox HorizontalAlignment="Left" Height="23" Margin="368.667,147.283,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="57.771"
							 Text="{Binding TaskManualTime}" 
							 IsReadOnly="{Binding IsTaskReadOnly}"
							 BorderThickness="{Binding TaskBorderTextBox}" />
                        <TextBlock HorizontalAlignment="Left" Height="15.96" Margin="368.667,131.06,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92.464">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Manual time"/></TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="13.99" Margin="431.438,156.293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46.693">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="min"/></TextBlock>
                        <Separator Height="7" Margin="165,189,16,0" VerticalAlignment="Top"/>
                        <Separator Height="8" Margin="184,224,45,0" VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left" Height="15.96" Margin="294.528,237.243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108.576">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Failed run this week"/></TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="74.797" Margin="537,237.243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Time saved"/><LineBreak/><Run Language="zh-cn" Text="- weekly"/><LineBreak/><Run Language="zh-cn" Text="- monthly"/><LineBreak/><Run Language="zh-cn" Text="- overall"/></TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="17.163" Margin="603,252.086,0,0" TextWrapping="Wrap" 
								Text="{Binding WeekTimeSaved}" VerticalAlignment="Top" Width="53">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="15.837" Margin="603,268.253,0,0" TextWrapping="Wrap" 
								Text="{Binding MonthTimeSaved}" VerticalAlignment="Top" Width="55">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="16.95" Margin="603,284.09,0,0" TextWrapping="Wrap" 
								Text="{Binding OverallTimeSaved}" VerticalAlignment="Top" Width="53">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="16" Margin="183.86,301.04,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117.14">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Last 3 runs"/><LineBreak/><Run Language="zh-cn"/></TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="16.046" Margin="304.528,258.203,0,0" TextWrapping="Wrap" Text="{Binding FailedRuns}" VerticalAlignment="Top" Width="29.805">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="15.5" Margin="414,236.54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="ja-jp" Text="Avg running time"/></TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="15.5" Margin="426,259.04,0,0" TextWrapping="Wrap" Text="{Binding AverageTime}" VerticalAlignment="Top" Width="37">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Height="15.5" Margin="466,258.04,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="53">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="ja-jp" Text="sec"/></TextBlock>
                        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="22"
                        	Command="{Binding ResetTaskCommand}"
                        	Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        	ToolTip="Reset statistics" Padding="2,0" BorderBrush="{x:Null}" Background="{x:Null}" Margin="98,10,0,0">
                            <Image Height="16" Source="../Images/arrow-circle.png" Stretch="Fill" Width="16"/>
                        </Button>
                        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="22"
                        	Command="{Binding ChangeTaskCommand}"
                        	Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        	ToolTip="Change task" Padding="2,0" BorderBrush="{x:Null}" Background="{x:Null}" Margin="125,10,0,0">
                            <Image Height="16" Source="../Images/document--pencil.png" Stretch="Fill" Width="16"/>
                        </Button>
                        <Button Height="23" Margin="0,147,127,0" VerticalAlignment="Top"
                        	Command="{Binding SaveTaskCommand}" HorizontalAlignment="Right" Width="90" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../Images/tick.png" Stretch="None" />
                                <TextBlock Margin="3,0,0,0"><Run Text="Save"/></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Height="23" Margin="0,146,18,0" VerticalAlignment="Top"
                        	Command="{Binding CancelSaveTaskCommand}" HorizontalAlignment="Right" Width="90" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../Images/cross.png" Stretch="None" />
                                <TextBlock Margin="3,0,0,0"><Run Text="Cancel"/></TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </TabItem>
                <TabItem Header="Users" Width="Auto" Margin="0,0,0,0" BorderBrush="{x:Null}">
                    <TabItem.Foreground>
                        <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                    </TabItem.Foreground>
                    <TabItem.Background>
                        <SolidColorBrush Color="{DynamicResource SecondBackground}"/>
                    </TabItem.Background>
                    <Grid Margin="-2">
                        <Grid.Background>
                            <SolidColorBrush Color="{DynamicResource SecondBackground}"/>
                        </Grid.Background>
                        <ListBox x:Name="ListBox2" HorizontalAlignment="Left" Margin="6,42,0,2.775" Width="155.875" 
        				ItemsSource="{Binding UserList}"
        				SelectedIndex="{Binding UserIndex}"
        				SelectedItem="{Binding SelectedUser}"
        				BorderThickness="0,1,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding WinUser}">
                                        <!--
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat=" {0} ({1})">
                                            <Binding Path="WinUser" />
                                            <Binding Path="Type" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                        
                                    <TextBlock.ToolTip>
                                        <Binding Path="FilePath" />
                                    </TextBlock.ToolTip>
                                        -->
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.Foreground>
