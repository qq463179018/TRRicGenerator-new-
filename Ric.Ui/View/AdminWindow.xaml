<Window x:Class="Ric.Ui.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:Ric.Ui.Converter"
      	x:Name="Window"
        DataContext="{Binding Adminvm, RelativeSource={RelativeSource Self}}"
        WindowStyle="None"
		AllowsTransparency="True"
		ResizeMode="CanResizeWithGrip"
    	MouseLeftButtonDown="AdminWindow_OnMouseLeftButtonDownWindow_OnMouseLeftButtonDown"
        Title="AdminWindow" Height="550" Width="726" MinHeight="500" MinWidth="700">
    <Window.Resources>
        <Color x:Key="MainTextColor">#FF222222</Color>
        <Color x:Key="SecondBackground">#DCDEDE</Color>
        <converter:ImageStringConverter x:Key="ImageConverter" />
        <CollectionViewSource x:Key="Markets" Source="{Binding Path=MarketList}" />
        <CollectionViewSource x:Key="Devs" Source="{Binding Path=DevList}" />
        <CollectionViewSource x:Key="Tasks" Source="{Binding Path=TaskList}" />
    </Window.Resources>
    <Border BorderThickness="1">
        <Border.Background>
            <SolidColorBrush Color="{DynamicResource MainBackground}"/>
        </Border.Background>
        <Border.BorderBrush>
            <SolidColorBrush Color="{DynamicResource Border}"/>
        </Border.BorderBrush>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource SecondBackground}"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="132*"/>
                <RowDefinition Height="103*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="87*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="256*"/>
            </Grid.ColumnDefinitions>
            <TabControl Grid.ColumnSpan="3" Margin="10,55,10,10" Grid.RowSpan="2" BorderThickness="0,1,0,0"
			TabStripPlacement="Top">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <!--
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentPresenter Content="{TemplateBinding Content}">
                                    <ContentPresenter.LayoutTransform>
                                        <RotateTransform Angle="270" />
                                    </ContentPresenter.LayoutTransform>
                                </ContentPresenter>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Padding" Value="3" />
                    -->
                    </Style>
                </TabControl.Resources>
                <TabControl.BorderBrush>
                    <SolidColorBrush Color="{DynamicResource Border}"/>
                </TabControl.BorderBrush>
                <TabControl.Background>
                    <SolidColorBrush Color="{DynamicResource SecondBackground}"/>
                </TabControl.Background>

                <TabItem Header="Report" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,0,0,0" BorderBrush="{x:Null}">
                    <TabItem.Foreground>
                        <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                    </TabItem.Foreground>
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                            <GradientStop Color="#FFF0F0F0" Offset="0"/>
                            <GradientStop Color="{DynamicResource SecondBackground}" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid Margin="0,0,0,0">
                        <Grid.Background>
                            <SolidColorBrush Color="{DynamicResource SecondBackground}"/>
                        </Grid.Background>
                        <Label Content="Market" HorizontalAlignment="Left" Height="28.5" Margin="33.54,23.833,0,0" VerticalAlignment="Top" Width="150">
                            <Label.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </Label.Foreground>
                        </Label>
                        <Label Content="Developer" HorizontalAlignment="Left" Height="25" Margin="33.54,60.833,0,0" VerticalAlignment="Top" Width="150">
                            <Label.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </Label.Foreground>
                        </Label>
                        <Label Content="Task" HorizontalAlignment="Left" Height="25" Margin="33.54,94.333,0,0" VerticalAlignment="Top" Width="150">
                            <Label.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </Label.Foreground>
                        </Label>
                        <Label Content="Start date" HorizontalAlignment="Left" Height="25" Margin="33.54,127.833,0,0" VerticalAlignment="Top" Width="150">
                            <Label.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </Label.Foreground>
                        </Label>
                        <Label Content="End date" HorizontalAlignment="Left" Height="25" Margin="33.54,161.333,0,0" VerticalAlignment="Top" Width="150">
                            <Label.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </Label.Foreground>
                        </Label>
                        <ComboBox HorizontalAlignment="Left" Height="28.5" Margin="212.04,23.833,0,0" VerticalAlignment="Top" Width="237"
            			SelectedItem="{Binding MarketFilter}" 
						SelectedIndex="{Binding MarketFilterIndex}"
                         >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image x:Name="FlagImage" Source="{Binding Abbreviation, Converter={StaticResource ImageConverter}}" Stretch="None" />
                                        <TextBlock Text="  " />
                                        <TextBlock Text="{Binding Name}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemsSource>
                                <CompositeCollection>
                                    <ComboBoxItem Content="All markets"></ComboBoxItem>
                                    <CollectionContainer Collection="{Binding Source={StaticResource Markets}}" />
                                </CompositeCollection>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <ComboBox HorizontalAlignment="Left" Height="28.5" Margin="212.04,57.333,0,0" VerticalAlignment="Top" Width="237"
            			SelectedItem="{Binding DevFilter}"
						SelectedIndex="{Binding DevFilterIndex}" >
                            <ComboBox.ItemsSource>
                                <CompositeCollection>
                                    <ComboBoxItem Content="All developers"></ComboBoxItem>
                                    <CollectionContainer Collection="{Binding Source={StaticResource Devs}}" />
                                </CompositeCollection>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <ComboBox HorizontalAlignment="Left" Height="28.5" Margin="212.04,90.833,0,0" VerticalAlignment="Top" Width="237" 
            			SelectedItem="{Binding TaskFilter}"
						SelectedIndex="{Binding TaskFilterIndex}" >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.ItemsSource>
                                <CompositeCollection>
                                    <ComboBoxItem Content="All tasks"></ComboBoxItem>
                                    <CollectionContainer Collection="{Binding Source={StaticResource Tasks}}" />
                                </CompositeCollection>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <DatePicker HorizontalAlignment="Left" Height="27" Margin="212.04,161.333,0,0" VerticalAlignment="Top" Width="237"
            			SelectedDate="{Binding EndDate}" />
                        <DatePicker HorizontalAlignment="Left" Height="27" Margin="212.04,125.833,0,0" VerticalAlignment="Top" Width="237"
            			SelectedDate="{Binding StartDate}" />
                        <Separator Height="8" Margin="2,208,11,0" VerticalAlignment="Top"/>
                        <DataGrid Margin="20,259,24,36"
            			ItemsSource="{Binding FilteredReport}" 
            			AutoGenerateColumns="False" >
                            <DataGrid.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </DataGrid.Foreground>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Task.Name}"/>
                                <DataGridTextColumn Width="*" Header="Market" Binding="{Binding Task.Market.Name}"/>
                                <DataGridTextColumn Width="*" Header="Dev" Binding="{Binding Task.Owner}"/>
                                <DataGridTextColumn Width="*" Header="Success" Binding="{Binding Successed}"/>
                                <DataGridTextColumn Width="*" Header="Fails" Binding="{Binding Failed}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Export" Margin="0,0,24,4" Command="{Binding CreateReportCommand}" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="111"/>
                        <Label Content="Report" HorizontalAlignment="Left" Height="35.938" Margin="21.54,217.833,0,0" VerticalAlignment="Top" Width="206.5" FontSize="18.667">
                            <Label.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </Label.Foreground>
                        </Label>
                    </Grid>
                </TabItem>

                <TabItem Header="Tasks" Width="Auto" Margin="0,0,00,0" BorderThickness="0,0,0,0" BorderBrush="{x:Null}">
