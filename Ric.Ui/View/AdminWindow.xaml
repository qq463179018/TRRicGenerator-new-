                                            <Setter Property="Opacity" Value="1.0" />
                                            <Setter Property="Background" Value="Gray" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <GridSplitter HorizontalAlignment="Left" Margin="161.924,0.042,0,0.05" Width="2.833">
                            <GridSplitter.Background>
                                <SolidColorBrush Color="Black" Opacity="0.5"/>
                            </GridSplitter.Background>
                        </GridSplitter>
                        <TextBlock HorizontalAlignment="Left" Margin="180.86,9.448,0,0" TextWrapping="Wrap" Width="50.916" Height="15.96" VerticalAlignment="Top">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBlock.Foreground><Run Language="zh-cn" Text="Name :"/></TextBlock>
                        <TextBox IsReadOnly="{Binding IsUserReadOnly}" HorizontalAlignment="Left" Margin="181.631,26.408,0,0" TextWrapping="Wrap" Text="{Binding UserSurname}" Width="137" FontSize="18" BorderThickness="1" Height="29.94" VerticalAlignment="Top" >
                            <TextBox.Foreground>
                                <SolidColorBrush Color="{DynamicResource MainTextColor}"/>
                            </TextBox.Foreground>
                            <TextBox.Background>
                                <SolidColorBrush Color="White" Opacity="0"/>
                            </TextBox.Background>
                        </TextBox>
